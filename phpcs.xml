<?xml version="1.0"?>
<ruleset name="ThoughtRiver coding standard">
    <description>ThoughtRiver coding standard</description>

    <!-- display progress -->
    <arg value="p"/>
    <!-- use colors in output -->
    <arg name="colors"/>

    <arg name="report-checkstyle" value="doc/codesniffer.xml"/>
    <arg name="report-full"/>

    <!-- inherit rules from: -->
    <rule ref="PSR2"/>
    <rule ref="Generic.Arrays.DisallowLongArraySyntax"/>

    <!-- Paths to check -->
    <file>src</file>
    <file>tests</file>
</ruleset>
